{
  "compilerOptions": {
    "target": "es2020",                                 
    "module": "commonjs",                               
    "baseUrl": "./",                                  
    "paths": {
      "@/*": ["./src/*"],
      "@node/*": ["./node/*"],
    },            
    "types": ["@types/jest"],                          
    "resolveJsonModule": true,                        
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    "strict": true,                                     
    "skipLibCheck": true                                 
  }
}
