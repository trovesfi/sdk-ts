{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "baseUrl": "./",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@node/*": ["./node/*"]
    },
    "types": ["@types/jest"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
